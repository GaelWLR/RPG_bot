    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "target": "ESNext",
    "types": []
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
  ]
}
